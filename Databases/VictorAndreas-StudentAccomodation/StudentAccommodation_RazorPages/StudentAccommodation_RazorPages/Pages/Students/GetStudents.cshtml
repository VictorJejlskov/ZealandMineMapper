@page
@model StudentAccommodation_RazorPages.Pages.Students.GetStudentsModel
@{
}
<h1>List of Students</h1>
<h3>Amount of Students @Model.Students.Count()</h3>
<h4>List of Students</h4>
<table class="table table-bordered table-striped">
    <thead class="bg-primary">
    <tr>
        <th>Student no.</th>
        <th>Name</th>
        <th>Address</th>
        <th></th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Students != null)
    {
        @foreach (var stud in Model.Students)
        {
            <tr>
                <td>@stud.Student_No</td>
                <td>@stud.Name</td>
                <td>@stud.Address</td>
                <td>
                    <a asp-page="/Leasings/GetLeasings" asp-page-handler="LeasingsPerStudent" asp-route-id="@stud.Student_No" class="text-info">Leasings</a>
                </td>
                <td>
                    <a asp-page="GetStudents" asp-page-handler="DeleteStudent" asp-route-id="@stud.Student_No" class="text-danger">Delete Student</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>