@page
@model ItemRazor.Pages.Order.MyOrdersModel
@{
}
<div>
    <table class="table table-bordered table-hover table-striped">
        <thead>
        <tr class="btn-secondary active">
            <th><h5>Order ID</h5></th>
            <th><h5>Order Date</h5></th>
            <th><h5>Item Id</h5></th>
            <th><h5>Item Name</h5></th>
            <th><h5>Item Price</h5></th>
            <th><h5>Count</h5></th>
            <th><h5>Total Order Price</h5></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ord in Model.Orders)
        {
            <tr class="btn-secondary">
                <td>@ord.OrderId</td>
                <td>@ord.Date</td>
                @if (ord.OrderLines.Count != 0)
                {
                    @foreach (var ordLine in ord.OrderLines)
                    {
                        <td>@ordLine.Item.Id</td>
                        <td>@ordLine.Item.Name</td>
                        <td>@ordLine.Item.Price</td>
                        <td>@ord.OrderLines.Count</td>
                        <td>@(ordLine.Item.Price * ord.OrderLines.Count)</td>
                    }
                }
                else
                {
                    <div>Listen er tom</div>
                }
            </tr>
        }
        </tbody>
    </table>
</div>