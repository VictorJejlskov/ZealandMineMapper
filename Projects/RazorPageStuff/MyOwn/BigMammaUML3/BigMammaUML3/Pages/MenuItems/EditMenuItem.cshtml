@page "{id:int}"
@model BigMammaUML3.Pages.MenuItems.EditMenuItemModel
@{
}
<h1>Create new Menu Item</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Number"></label>
        <input asp-for="Number" class="form-control" name="Number" readonly="readonly"/>
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" name="Description" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="form-control" name="Price" />
    </div>
    <div>
        <div>
            Alcoholic Beverage / Deep Pan Pizza: <input type="checkbox" asp-for="SpecialCondition" data-val="true" data-val-required="The IsChecked field is required." id="SpecialCondition" name="SpecialCondition">
        </div>
    </div>
    <div class="form-group">
        <input type="submit" value="Update Item" class="btn btn-primary" />
    </div>
</form> 